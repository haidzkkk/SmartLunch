<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/searchpanes/1.4.0/css/searchPanes.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/searchpanes/1.4.0/js/dataTables.searchPanes.min.js"></script>
  <link rel="stylesheet" href="style.css">
</head>
<style>
  /* Reset some default styles */
  body,
  h1,
  h2,
  h3,
  p {
    margin: 0;
    padding: 0;
  }

  /* Global styles */
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f9fa;
  }

  .container {
    margin-top: 20px;
  }

  .smartphone {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .row {
    margin-bottom: 20px;
  }

  /* Product image styles */
  #img-preview {
    width: 100%;
    height: auto;
    border-radius: 5px;
  }

  .row .col img {
    width: 60%;
    height: auto;
    border-radius: 5px;
    margin-bottom: 10px;
    cursor: pointer;
    transition: transform 0.2s ease-in-out;
  }

  .row .col img:hover {
    transform: scale(1.1);
  }

  /* Product details styles */
  #name {
    font-size: 1.5rem;
    margin-top: 15px;
  }

  #price {
    font-size: 1.5rem;
    color: #FF593E;
    margin-top: 15px;
  }

  /* Product description styles */
  #descriptiontext {
    color: #9CA4AB;
    margin-top: 20px;
  }

  /* Sizes styles */
  .h4 {
    font-size: 1.2rem;
  }

  /* Three dots icon styles */
  .bi-three-dots {
    margin-top: 15px;
    cursor: pointer;
  }

  /* Update form styles */
  #updateForm {
    margin-top: 20px;
  }

  /* Remove form styles */
  #removeForm {
    margin-top: 20px;
  }

  /* Modal styles */
  .modal-content {
    border-radius: 10px;
  }

  /* Responsive styles */
  @media (max-width: 576px) {
    .smartphone {
      padding: 10px;
    }

    #img-preview {
      height: auto;
    }
  }

  .col {

  }

  #removeForm {

  }

    .btn {
      background-color: #FF593E;
      color: aliceblue;
    }
</style>

<body>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="smartphone">
          <img src="{{data.category_image.url}}" alt="Category Image" width="430px" height="270px" id="img-preview">

          <!-- Product details -->
          <div class="row">
            <div class="col">
              <label class="form-label"> Tên danh mục </label>
              <h2 style="margin-left: 20px; margin-top: 30px; font-size: x-large;" id="name">{{data.category_name}}</h2>
            </div>

          </div>

        </div>
      </div>

      <div class="col">
        <div class="mb-3">
          <i style="float: right; font-size: small;">ID: {{data._id}}</i>
          <form action="http://localhost:3000/api/updateCategory/{{data._id}}" method="post" id="updateForm"
            enctype="multipart/form-data">
            <label class="form-label"> Tên danh mục </label>
            <input class="form-control" name="category_name" id="category_name" required="required"
              value="{{data.category_name}}">
            <div class="col">
              <label class="form-label">Image</label>
              <img src="{{data.category_image.url}}" alt="" class="form-control" id="img-preview"
                style="height: 400px; width: 400px">
              <input type="file" class="form-control mt-3" id="images" name="images" accept="image/*">
            </div>
            <div class="row">
              <div class="col">
                <button type="submit" class="btn" style="margin-top: 10px;">Update</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="col">
    <form action="http://localhost:3000/api/remove/category/{{data._id}}" method="get" id="removeForm">
      <button type="submit" class="btn">Move to recycle bin</button>
    </form>
  </div>

  <div class="row">
    <div class="col">
      <div class="smartphone">
    
        <!-- Size Modal -->
        <div class="modal" tabindex="-1" role="dialog" id="sizeModal">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Add Size</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <!-- Form to enter Size information -->
                <form id="sizeForm">
                  <div class="mb-3">
                    <label for="sizeName" class="form-label">Size Name</label>
                    <input type="text" class="form-control" id="size_name" required>
                  </div>
                  <div class="mb-3">
                    <label for="priceSize" class="form-label">Price Size</label>
                    <input type="number" class="form-control" id="size_price" required>
                  </div>
                  <input type="hidden" id="productId" value="{{data._id}}">
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.getElementById('updateForm').addEventListener('submit', function (event) {
      const confirmUpdate = confirm("Do you really want to update this?");
      if (!confirmUpdate) {
        event.preventDefault();
      } else {
  
      }
    });

    document.getElementById('removeForm').addEventListener('submit', function (event) {
      const confirmRemove = confirm("Do you really want to remove this?");
      if (!confirmRemove) {
        event.preventDefault();
      } else {
        if (window.location.href.includes('/api/admin/category')) {
          window.location.href = 'http://localhost:3000/api/admin/category';
        }
      }
    });

    const fileInput = document.getElementById("images");
    const imgPreview = document.getElementById("img-preview");
    fileInput.addEventListener('change', function () {
      if (fileInput.files && fileInput.files[0]) {
        let reader = new FileReader();

        reader.onload = function (e) {
          imgPreview.src = e.target.result;
        };

        reader.readAsDataURL(fileInput.files[0]);
      } else {
        // Xử lý khi không có tệp hình ảnh nào được chọn
        console.log("Không có tệp hình ảnh được chọn");
      }
    });

    
  </script>
</body>

</html>
