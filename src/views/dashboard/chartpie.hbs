<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pie Chart</title>
  <!-- Bạn cần thêm đường dẫn đến thư viện Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <!-- Địa điểm hiển thị biểu đồ -->
    <div class="row mt-4">
    <div class="col-md-6">
  <canvas id="myPieChart" width="400" height="400"></canvas>
    </div>
    <div class="col-md-6">
    <canvas id="myPieChart2" width="400" height="400"></canvas>
    </div>
  </div>


  <script>
    // Dữ liệu phần trăm và màu sắc
    var data = {
      labels: ["Đơn thành công", "Đơn hủy"],
      datasets: [{
        data: [{{statusCount.orderCount}}, {{statusCount.cancelCount}}],
        backgroundColor: ["#FF0000", "#777777"]
      }]
    };

    // Cấu hình biểu đồ
    var options = {
      responsive: true,
      maintainAspectRatio: false,
      title: {
        display: true,
        text: 'Biểu đồ Pie'
      }
    };

    // Lấy đối tượng canvas và vẽ biểu đồ pie
    var ctx = document.getElementById("myPieChart").getContext("2d");
    var myPieChart = new Chart(ctx, {
      type: 'doughnut',
      data: data,
      options: options
    });
  </script>

