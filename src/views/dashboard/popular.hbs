<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="userDashboard.css">
</head>
<style>
    /* Thêm tùy chỉnh CSS nếu cần thiết */
.card {
  width: 200px;
  margin: auto;
  border-radius: 15px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

#userIcon {
  color: #007bff;
}

#userCount {
  color: #6c757d;
}
</style>
<body>
  <div class="container mt-5">
    <div class="card text-center">
      <div class="card-body">
        <div id="userIcon" class="display-4">&#128101;</div>
        <div id="userCount" class="h4 mt-3">Loading...</div>
      </div>
      
    </div>
  </div>
  <script src="userDashboard.js"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
<script>
    var totalUsers = 5000;

// Cập nhật thông tin người dùng trên dashboard
document.getElementById('userCount').textContent = totalUsers.toLocaleString();
</script>