<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Mã giảm giá</title>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/searchpanes/1.4.0/css/searchPanes.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/searchpanes/1.4.0/js/dataTables.searchPanes.min.js"></script>
  <link rel="stylesheet" href="style.css">
  <style>
    table.table-striped {
      text-align: center;
    }

    .btn {
      background-color: #FF593E;
      color: aliceblue;
    }

    h3 {
      text-align: center;
    }

  </style>
</head>

<body>
  <div class="container">
    <h3>Mã giảm giá</h3>
    <form action="http://localhost:3000/api/coupons" method="post" id="addForm">
      <div class="mb-3">
        <label class="form-label">Tên mã giảm giá</label>
        <input class="form-control" name="coupon_name" id="coupon_name" required="true">
        <div id="emailHelp" class="form-text"></div>
      </div>

      <div class="mb-3">
        <label class="form-label">Code</label>
        <input class="form-control" name="coupon_code" id="coupon_code" required="true">
        <div id="emailHelp" class="form-text"></div>
      </div>

      <div class="mb-3">
        <label class="form-label">Nội dung</label>
        <input class="form-control" name="coupon_content" id="coupon_content" required="true">
        <div id="emailHelp" class="form-text"></div>
      </div>

      <div class="row">
        <div class="col">
          <label class="form-label">Số lượng</label>
          <input type="number" class="form-control" name="coupon_quantity" id="coupon_quantity" required="true">
          <div id="emailHelp" class="form-text"></div>
          <div id="emailHelp" class="form-text">Hãy nhập số</div>
        </div>

        <div class="col">
          <label class="form-label">Coupon discount amount</label>
          <input type="number" class="form-control" name="discount_amount" id="discount_amount" required="true">
          <div id="emailHelp" class="form-text"></div>
          <div id="emailHelp" class="form-text">Hãy nhập số</div>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <label class="form-label">Coupon min purchase amount</label>
          <input type="number" class="form-control" name="min_purchase_amount" id="min_purchase_amount" required="true">
          <div id="emailHelp" class="form-text"></div>
          <div id="emailHelp" class="form-text">Hãy nhập số</div>
        </div>
        <div class="col">
          <label class="form-label">Ngày hết hạn</label>
          <input type="datetime-local" class="form-control" name="expiration_date" id="expiration_date" required="true">
          <div id="emailHelp" class="form-text"></div>
        </div>
      </div>

      <button type="submit" class="btn" style="margin: 20px;">Tạo</button>
    </form>
    <script>
      document.getElementById('addForm').addEventListener('submit', function (event) {
        if (window.location.href.includes('/api/admin/coupons')) {
          window.location.href = 'http://localhost:3000/api/admin/coupons';
        } else {
        }
      });
    </script>
    <h3>Danh sách mã giảm giá</h3>
    <table id="datatable" class="table table-striped " style="width:100%">
      <thead>
        <tr>
          <th style="color: #FF593E;text-align: center">Tên mã</th>
          <th style="color: #FF593E;text-align: center">Nội dung</th>
          <th style="color: #FF593E;text-align: center">Số lượng</th>
          <th style="color: #FF593E;text-align: center">Ngày hết hạn</th>
          <th style="color: #FF593E;text-align: center">Chi tiết</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr>
          <td>{{this.coupon_name}}</td>
          <td maxlength="10">{{this.coupon_content}}</td>
          <td>{{this.coupon_quantity}}</td>
          <td>{{this.expiration_date}}</td>
          <td><a href="/api/admin/coupons/{{this._id}} " style="text-decoration: none"><svg
                xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" style="color: #FF593E;"
                class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
                <path
                  d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
              </svg></a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <dir class="m-5 pb-5"></dir>
  </div>
</body>
<script>
  $(document).ready(function () {
    $('#datatable').DataTable({
      info: false,
      paging: false,
    });
  });
</script>

</html>