<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Hiển thị dữ liệu API</title>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/searchpanes/1.4.0/css/searchPanes.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/searchpanes/1.4.0/js/dataTables.searchPanes.min.js"></script>
  <link rel="stylesheet" href="style.css">
  <style>
    table.table-striped {
      text-align: center;
    }

    .btn {
      background-color: #FF593E;
      color: aliceblue;
    }

    h3 {
      text-align: center;
    }
  </style>
</head>

<body>
  <div class="container">
        <h3>Coupon table</h3>
    <table id="datatable" class="table table-striped" style="width:100%">
      <thead>
        <tr>
          <th style="color: #FF593E;text-align: center">Name</th>
          <th style="color: #FF593E;text-align: center">phone</th>
          <th style="color: #FF593E;text-align: center">address</th>
          <th style="color: #FF593E;text-align: center">notes</th>
          <th style="color: #FF593E;text-align: center">total</th>
          <th style="color: #FF593E;text-align: center">Details</th>
        </tr>
      </thead>
      <tbody>
              </tbody>
    </table>
    <dir class="m-5 pb-5"></dir>
  </div>
</body>
<script>
  $(document).ready(function () {
    $('#datatable').DataTable({
      info: false,
      paging: false,
    searching: false,
      });

      // Make an AJAX request to your API endpoint
      $.ajax({
        url: 'http://localhost:3000/api/getAllorder',
        method: 'GET',
        dataType: 'json',
        success: function (data) {
          // Loop through the received data and populate the table
          data.forEach(function (order) {
            var productNames = order.products.map(function (product) {
              return product.product_name;
            }).join(', ');

            var nameLink =  productNames ; // Replace your-link-here
            var phone = order.phone;
            var address = order.address;
            var notes = order.notes;
            var total = order.total;

            // Create a button for details
            var detailsButton = '<button class="btn btn-details" data-order-id="' + order._id + '">Details</button>';

            $('#datatable').DataTable().row.add([
              nameLink,
              phone,
              address,
              notes,
              total,
              detailsButton
            ]).draw();
          });
          // Add click event handler for details buttons
          $('.btn-details').click(function () {
            var orderId = $(this).data('order-id');
            window.location.href = "/api/getByIdOder/"+orderId;
          });
        },
        error: function (error) {
          console.log('Error:', error);
        }
      });
  });
</script>
</body>

</html>
