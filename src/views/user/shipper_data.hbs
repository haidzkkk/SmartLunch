<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Hiển thị dữ liệu API</title>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/searchpanes/1.4.0/css/searchPanes.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/searchpanes/1.4.0/js/dataTables.searchPanes.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    table.table-striped {
      text-align: center;
    }

    .btn {
      background-color: #FF593E;
      color: aliceblue;
    }

    h3 {
      text-align: center;
    }
  </style>
</head>

<body>
  <a href="/api/admin/shipper/create" class="btn btn-primary fa-lg gradient-custom-2 mb-3">Tạo mới người giao hàng</a>
  <a href="/api/admin/shipper/top" class="btn btn-primary fa-lg gradient-custom-2 mb-3">Top Shipper</a>

  <h3>Danh sách người giao hàng</h3>
  <table id="datatable" class="table table-striped table-bordered " style="width:100%">
    <thead>
      <thead>
        <tr>
          <th style="color: black;text-align: center">Email</th>
          <th style="color: black;text-align: center">Vai Trò</th>
          <th style="color: black;text-align: center">Ngày tham gia</th>
          <th style="color: black;text-align: center">Chi tiết</th>
        </tr>
      </thead>
    </thead>
    <tbody id="tableBody">
    </tbody>
  </table>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Make an AJAX request to your API
      $.ajax({
        url: 'http://localhost:3000/api/shipper',
        method: 'GET',
        dataType: 'json',
        success: function (data) {
          // Populate the table with data
          populateTable(data);
        },
        error: function (error) {
          console.error('Error fetching data from the API:', error);
        }
      });

      // Function to populate the table with data
      function populateTable(data) {
        const tableBody = document.getElementById('tableBody');

        data.forEach(user => {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td  style="text-align: left">${user.email}</td>
            <td>${user.role}</td>
            <td class="date-cell">${formatDate(user.createdAt)}</td>
            <td>
              <a href="/api/admin/oder_shipper/${user._id}" style="text-decoration: none">
                <p class="btn btn-primary fa-lg gradient-custom-2 mb-3" style="margin: auto; padding: 10px;display: flex;
                justify-content: center;font-size: 10px;">Xem các đơn hàng</p>
              </a>
            </td>
          `;
          tableBody.appendChild(row);
        });

        // Format dates after populating the table
        formatDates();
      }

      // Function to format dates
      function formatDates() {
        const dateCells = document.querySelectorAll('.date-cell');
        dateCells.forEach(cell => {
          const isoDate = cell.textContent;
          const date = new Date(isoDate);
          const formattedDate = date.toLocaleString('vi-VN', {
            year: 'numeric',
            month: '2-digit',
            day: '2-digit',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit',
            timeZone: 'Asia/Ho_Chi_Minh',
          });
          cell.textContent = formattedDate;
        });
      }

      // Function to format a single date
      function formatDate(isoDate) {
        const date = new Date(isoDate);
        return date.toLocaleString('vi-VN', {
          year: 'numeric',
          month: '2-digit',
          day: '2-digit',
          hour: '2-digit',
          minute: '2-digit',
          second: '2-digit',
          timeZone: 'Asia/Ho_Chi_Minh',
        });
      }
    });
  </script>
</body>

</html>