<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/searchpanes/1.4.0/css/searchPanes.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/searchpanes/1.4.0/js/dataTables.searchPanes.min.js"></script>
<link rel="stylesheet" href="style.css">
<style>
  .btn {
    background-color: #FF593E;
    color: aliceblue;
  }
</style>

<body>
  <div class="container">
    <i style="float: right; font-size: small; text-">
      ID: {{data._id}}
    </i>
    <h3>Detail User</h3>
    <p></p>
    <img src="{{data.avatar.url}}" class="rounded mx-auto d-block" width="200px" height="200px" alt="">
    <form>
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" name="expiration_date" id="expiration_date" disabled="disabled"
          value="{{data.email}}">
        <div id="emailHelp" class="form-text"></div>
      </div>
      <div class="row">
        <div class="col">
          <label class="form-label">First name</label>
          <input class="form-control" name="coupon_name" id="coupon_name" disabled="disabled"
            value="{{data.first_name}}">
        </div>
        <div class="col">
          <label class="form-label">Last name</label>
          <input class="form-control" name="coupon_code" id="coupon_code" disabled="disabled"
            value="{{data.last_name}}">
        </div>
      </div>
      <div class="row">
        <div class="col">
          <label class="form-label">Gender</label>
          <input class="form-control" name="coupon_quantity" id="gender" name="gender" disabled="disabled"
            value="{{data.gender}}">
          <div id="emailHelp" class="form-text"></div>
        </div>

        <div class="col">
          <label class="form-label">Birthday</label>
          <input class="form-control" name="coupon_quantity" id="coupon_quantity" disabled="disabled"
            value="{{data.birthday}}">
          <div id="emailHelp" class="form-text"></div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Phone</label>
        <input class="form-control" name="min_purchase_amount" id="min_purchase_amount" disabled="disabled"
          value="{{data.phone}}">
        <div id="emailHelp" class="form-text"></div>
      </div>
      <div class="row">
        <div class="col">
          <label class="form-label">Member</label>
          <input class="form-control" name="min_purchase_amount" id="min_purchase_amount" disabled="disabled"
            value="{{data.role}}">
          <div id="emailHelp" class="form-text"></div>
        </div>
        <div class="col">
          <label class="form-label">Verified</label>
          <input class="form-control" name="min_purchase_amount" id="min_purchase_amount" disabled="disabled"
            value="{{data.verified}}">
          <div id="emailHelp" class="form-text"></div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label">GoogleId</label>
        <input class="form-control" name="min_purchase_amount" id="min_purchase_amount" disabled="disabled"
          value="{{data.googleId}}">
        <div id="emailHelp" class="form-text"></div>
      </div>
      <div class="mb-3">
        <label class="form-label">FacebookId</label>
        <input class="form-control" name="min_purchase_amount" id="min_purchase_amount" disabled="disabled"
          value="{{data.facebookId}}">
        <div id="emailHelp" class="form-text"></div>
      </div>
      <div class="row">
        <div class="col">
          <label class="form-label">AuthType</label>
          <input class="form-control" name="min_purchase_amount" id="min_purchase_amount" disabled="disabled"
            value="{{data.authType}}">
          <div id="emailHelp" class="form-text"></div>
        </div>
        <div class="col">
          <label class="form-label">CreatedAt</label>
          <input type="datetime" class="form-control" name="min_purchase_amount" id="min_purchase_amount"
            disabled="disabled" value="{{data.createdAt}}">
          <div id="emailHelp" class="form-text"></div>
        </div>
      </div>
    </form>
    <form action="http://localhost:3000/api/deletebyadmin/{{data._id}}" method="get" id="deleteForm">
      <div class="d-grid gap-2 col-6 mx-auto m-5 pb-5 ">
        <button type="submit" onclick="abc()" class="btn text-center">Delete</button>
      </div>
    </form>
    <script>
      document.getElementById('deleteForm').addEventListener('submit', function (event) {
        const confirmDelete = confirm("Do you really want to delete this?");
        if (!confirmDelete) {
          event.preventDefault();
        } else {
          if (window.location.href.includes('/api/admin/users')) {
            window.location.href = 'http://localhost:3000/api/admin/users';
          } else {
          }
        }
      });
    </script>
  </div>
</body>