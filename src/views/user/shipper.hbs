    border: 16px black solid;
    border-top-width: 60px;
    border-bottom-width: 60px;
    border-radius: 36px;
  }

  /* The horizontal line on the top of the device */
  .smartphone:before {
    content: '';
    display: block;
    width: 60px;
    height: 5px;
    position: absolute;
    top: -30px;
    left: 50%;
    transform: translate(-50%, -50%);
    background: #ffffff;
    border-radius: 10px;
  }

  /* The circle on the bottom of the device */


  /* The screen (or content) of the device */
  .smartphone .content {
    width: 460px;
    height: 940px;
    background: white;
  }

  .h4 {
    font-size: larger;
    border: 1px solid #F44849;
    border-radius: 25px;
    text-align: center;
    margin: 0;
    color: #F44849;
    font-weight: 500;
    padding: 11px;
  }

  .h44 {
    font-size: larger;
    border-radius: 25px;
