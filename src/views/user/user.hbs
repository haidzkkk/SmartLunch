<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Thành viên</title>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/searchpanes/1.4.0/css/searchPanes.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/searchpanes/1.4.0/js/dataTables.searchPanes.min.js"></script>
  <style>
    table.table-striped {
      text-align: center;
    }

    .btn {
      background-color: #FF593E;
      color: aliceblue;
    }

    h3 {
      text-align: center;
    }
  </style>
</head>

<body>
  <div class="container">

    <h3>Danh sách thành viên</h3>
    <table id="datatable" class="table table-striped " style="width:100%">
      <thead>
        <tr>
          <th style="color: #FF593E;text-align: center">Email</th>
          <th style="color: #FF593E;text-align: center">Vai trò</th>
          <th style="color: #FF593E;text-align: center">Ngày tham gia</th>
          <th style="color: #FF593E;text-align: center">Chi tiết</th>
        </tr>
      </thead>
      <tbody id="tableBody">
      </tbody>
    </table>
  </div>
</body>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Make an AJAX request to your API
    $.ajax({
      url: 'http://localhost:3000/api/users',
      method: 'GET',
      dataType: 'json',
      success: function (data) {
        // Populate the table with data
        populateTable(data);
      },
      error: function (error) {
        console.error('Error fetching data from the API:', error);
      }
    });

    // Function to populate the table with data
    function populateTable(data) {
      const tableBody = document.getElementById('tableBody');

      data.forEach(user => {
        const row = document.createElement('tr');
        row.innerHTML = `
            <td>${user.email}</td>
            <td>${user.role}</td>
            <td class="date-cell">${formatDate(user.createdAt)}</td>
            <td> <a href="/api/admin/users/${user._id}" style="text-decoration: none">
                <p class="btn btn-primary fa-lg gradient-custom-2 mb-3" style="margin: auto; padding: 10px;display: flex; 
                justify-content: center;font-size: 10px;">Chi tiết</p>
              </a></td>
          `;
        tableBody.appendChild(row);
      });

      // Format dates after populating the table
      formatDates();
    }

    // Function to format dates
    function formatDates() {
      const dateCells = document.querySelectorAll('.date-cell');
      dateCells.forEach(cell => {
        const isoDate = cell.textContent;
        const date = new Date(isoDate);
        const formattedDate = date.toLocaleString('vi-VN', {
          year: 'numeric',
          month: '2-digit',
          day: '2-digit',
          hour: '2-digit',
          minute: '2-digit',
          second: '2-digit',
          timeZone: 'Asia/Ho_Chi_Minh',
        });
        cell.textContent = formattedDate;
      });
    }

    // Function to format a single date
    function formatDate(isoDate) {
      const date = new Date(isoDate);
      return date.toLocaleString('vi-VN', {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        timeZone: 'Asia/Ho_Chi_Minh',
      });
    }
  });

</script>

</html>